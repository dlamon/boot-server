<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="example" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8" />
        <property name="beginningDelimiter" value="`" />
        <property name="endingDelimiter" value="`" />

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.example.boot.server.util.MybatisMapper" />
        </plugin>

        <commentGenerator>
            <property name="suppressDate" value="true" />
            <property name="suppressAllComments" value="false" />
        </commentGenerator>

        <!-- <jdbcConnection driverClass="com.mysql.jdbc.Driver" -->
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://www.liaowei.net.cn:3306/test?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false"
                userId="root"
                password="root123"
        />

        <javaTypeResolver>
            <property name="forceBigDecimals" value="true" />
        </javaTypeResolver>

        <javaModelGenerator
                targetPackage="com.example.boot.server.pojo.ddo.test"
                targetProject="src/main/java"
        >
            <property name="constructorBased" value="false" />
            <!-- <property name="rootClass" value="com.mars.ssm.impl.dao.BaseEntity" /> -->
            <property name="enableSubPackages" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator
                targetPackage="dao.test"
                targetProject="src/main/resources"
        >
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator
                type="XMLMAPPER"
                targetPackage="com.example.boot.server.dao.test"
                targetProject="src/main/java"
        >
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table
                tableName="test_info"
                domainObjectName="TestInfoDO"
                mapperName="TestInfoDao"
        />

    </context>
</generatorConfiguration>
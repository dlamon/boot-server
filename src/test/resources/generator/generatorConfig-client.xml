<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="example" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8" />

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="forceAnnotation" value="true"/>
            <property name="beginningDelimiter" value="`"/>
            <property name="endingDelimiter" value="`"/>
            <property name="lombok" value="Data"/>
        </plugin>

        <commentGenerator>
            <property name="suppressDate" value="true" />
            <property name="suppressAllComments" value="false" />
        </commentGenerator>

        <!-- <jdbcConnection driverClass="com.mysql.jdbc.Driver" -->
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://www.liaowei.net.cn:3306/client?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false"
                userId="root"
                password="root123"
        />

        <javaTypeResolver>
            <property name="forceBigDecimals" value="true" />
        </javaTypeResolver>

        <javaModelGenerator
                targetPackage="com.example.boot.server.pojo.dos.client"
                targetProject="src/test/generator"
        >
            <property name="constructorBased" value="false" />
            <!-- <property name="rootClass" value="com.mars.ssm.impl.dao.BaseEntity" /> -->
            <property name="enableSubPackages" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator
                targetPackage="dao.client"
                targetProject="src/test/generator"
        >
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator
                type="XMLMAPPER"
                targetPackage="com.example.boot.server.dao.client"
                targetProject="src/test/generator"
        >
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table
                tableName="info"
                domainObjectName="InfoDO"
                mapperName="InfoDao"
        />

    </context>
</generatorConfiguration>